<div class="container p-4">
  <div class="row">
    {{#each gts}}
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <h3
              class="card-title text-uppercase text-info font-weight-bold text-sm"
            >
              {{name}}
            </h3>
            <p class="m-2">{{price}}</p>
            <p class="m-2">{{description}}</p>
            <p>{{timeago created_at}}</p>
            <div>
              <div class="text-center">                
                  <a
                    href="/links/delete/{{id}}"
                    class="btn btn-danger m-2"
                  >Delete Link</a>
                  <a href="/links/edit/{{id}}" class="btn btn-secondary">Edit
                    Link</a>                               
              </div>
            </div>
          </div>
        </div>
      </div>
    {{else}}
      <div class="col md-4 mx-auto">
        <div class="card card-body text-center">
          <p>There are not any links saved yet</p>
          <a href="/links/add">Create One</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>