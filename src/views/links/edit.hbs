<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header mb-2">
          <h3>Edit links</h3>
        </div>
        <div class="card-body">
          <form action="/links/edit/{{link.id}}" method="POST">
            <div class="form-group mb-2">
              <input
                type="text"
                value="{{link.name}}"
                class="form-control"
                name="name"
                placeholder="Title"
                autofocus
              />
            </div>
            <div class="form-group mb-2">
              <input
                type="text"
                value="{{link.price}}"
                name="price"
                class="form-control"
                placeholder="URL"
              />
            </div>
            <div class="form-group mb-3">
              <textarea               
                name="description"
                rows="2"
                class="form-control"
                placeholder="Description"
              >{{link.description}}</textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">
                Edit
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>