<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header mb-2">
          <h3>Add Spend</h3>
        </div>
        <div class="card-body">
          <form action="/links/add" method="POST">
            <div class="form-group mb-2">
              <input
                type="text"
                class="form-control"
                name="name"
                placeholder="Account"
                autofocus
              />
            </div>
            <div class="form-group mb-2">
              <input
                type="text"
                name="price"
                class="form-control"
                placeholder="Price"
              />
            </div>
            <div class="form-group mb-3">
              <textarea
                name="description"
                rows="2"
                class="form-control"
                placeholder="Description"
              ></textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">
                Save
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>